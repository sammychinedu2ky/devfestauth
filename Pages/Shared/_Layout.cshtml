<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevFestAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="https://www.gstatic.com/firebasejs/ui/6.0.0/firebase-ui-auth.js"></script>
    <link
      type="text/css"
      rel="stylesheet"
      href="https://www.gstatic.com/firebasejs/ui/6.0.0/firebase-ui-auth.css"
</head>
<body>
  
     <nav>
      <div class="nav-wrapper blue lighten-3">
        <a href="/" class="brand-logo">DevFest Razor Login</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-small-and-down">
            <li>@User.Identity.Name</li>
          <li><a asp-page="Protected">Protected</a></li>
            @if (User.Identity.IsAuthenticated)
        {
          <li><a asp-page="Logout">Logout</a></li>   
        }
        else
        {
             <li><a asp-page="Login">Login</a></li>
        }
        </ul>
      </div>
    </nav>
    <ul class="sidenav" id="mobile-demo">
        <li><a asp-page="Protected">Protected</a></li>
        @if (User.Identity.IsAuthenticated)
        {
          <li><a asp-page="Logout">Logout</a></li>   
        }
        else
        {
             <li><a asp-page="Login">Login</a></li>
        }
       
      </ul>
    
      @RenderBody()
  
       <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-auth.js"></script>
  

      <script src="~/js/site.js" asp-append-version="true"></script>
       @await RenderSectionAsync("code", required: false)
</body>
</html>